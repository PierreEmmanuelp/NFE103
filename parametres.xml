<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE parametres SYSTEM "./param/parametres.dtd">
<!-- Paramètres de conlfiguration du serveur HTTP multi-thread -->
<parametres>
  <configuration>
    <!-- Port d'écoute du serveur -->
    <port>8081</port>
    <!-- Nombre de thread dans le pool -->
    <threadpool>50</threadpool>
    <!-- Chemin du fichier de log -->
    <pathlog>logfolder</pathlog>
    <hosts>
      <host name="localhost:8081" path="c:\www\" />
      <host name="www2.fr:8081" path="" />
    </hosts>
  </configuration>
  <detail>
    <Serveur value="CNAM_NFE103/1.0" />
    <Connection value="Keep-Alive;timeout=15, max=100" />
  </detail>
</parametres>
